<!-- The fields of the Activity form. -->
<div class="form-group mb-4">
    <label for="title" style="color: black; font-weight: bold; font-size: 20px"> Title: </label>
    <input required value="<%= activity.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group mb-4 w-25">
    <label for="category" style="color: black; font-weight: bold; font-size: 20px;"> Category: </label>
    <select name="category" id="category" class="form-control">
        <% categories.forEach(category => { %>
        <option value="<%= category %>"><%= category %>
        </option>
        <% }) %>
    </select>
</div>

<div class="form-group mb-4">
    <label for="targetAudience" style="color: black; font-weight: bold; font-size: 20px;"> Target audience:
    </label><br />
    <select required name="targetAudience" id="targetAudience" size="3" multiple>
        <% targetAudience.forEach(audience => { %>
        <option value="<%= audience %>"><%= audience %>
        </option>
        <% }) %>
    </select>
</div>

<div class="form-group mb-4 w-25">
    <label for="designedFor" style="color: black; font-weight: bold; font-size: 20px;"> Designed for: </label>
    <select name="designedFor" id="designedFor" class="form-control">
        <% designedFor.forEach(participants => { %>
        <option value="<%= participants %>"><%= participants %>
        </option>
        <% }) %>
    </select>
</div>

<div class="form-group mb-4 w-50">
    <label for="cost" style="color: black; font-weight: bold; font-size: 20px"> Cost: </label>
    <input required value="<%= activity.cost %>" type="text" name="cost" id="cost" class="form-control">
</div>


<div class="form-group mb-4">
    <label for="description" style="color: black; font-weight: bold; font-size: 20px;"> Description: </label>
    <textarea name="description" id="description" class="form-control" rows="4"
        cols="50"><%= activity.description %></textarea>
</div>

<div class="form-group mb-5">
    <label for="markdown" style="color: black; font-weight: bold; font-size: 20px;"> Markdown: </label>
    <textarea required name="markdown" id="markdown" class="form-control" rows="10"
        cols="50"><%= activity.markdown %></textarea>
</div>

<div class="form-group mb-4">
    <label for="password" style="color: black; font-weight: bold; font-size: 20px"> Password (will allow you to modify/delete the post): </label>
    <input required value="<%= activity.password %>" type="text" name="password" id="password" class="form-control w-50">
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>