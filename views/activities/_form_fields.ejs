<!-- The fields of the Activity form. -->
<div class="form-group w-75">
    <label for="title" style="color: black; font-weight: bold; font-size: 20px"> Title: </label>
    <input required value="<%= activity.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group w-25">
    <label for="category" style="color: black; font-weight: bold; font-size: 20px;"> Category: </label>
    <select name="category" id="category" class="form-control">
    <% categories.forEach(category => { %>
        <option value=>
            <%=category %>
        </option>
        </div>
    <% }) %>
    </select>
</div>

<div class="form-group w-75">
    <label for="description" style="color: black; font-weight: bold; font-size: 20px;"> Description: </label>
    <textarea name="description" id="description" class="form-control" rows="4" cols="50"><%= activity.description %>
    </textarea>
</div>

<div class="form-group w-75">
    <label for="markdown" style="color: black; font-weight: bold; font-size: 20px;"> Markdown: </label>
    <textarea required name="markdown" id="markdown" class="form-control" rows="10" cols="50">
        <%= activity.markdown %>
    </textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
