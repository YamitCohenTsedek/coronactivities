<!DOCTYPE html>
<html lang="en" oncontextmenu="return false;">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-image: url('../background.jpg');
        }

        img {
            display: block;

        }
    </style>
</head>

<body>
    <div class="container">
        <div style="background-color:rgb(225, 248, 245);" class="container p-4 mt-4 mb-4 ml-0 w-75">
            <h1 class="mb-5" style="color:black; font-weight: bold; font-size: 42px;">New Activity</h1>
            <form action="/activities" method="POST">
                <!-- The fields of the Activity form. -->
                <div class="form-group mb-4">
                    <label for="title" style="color: black; font-weight: bold; font-size: 20px"> Title: <small>(give a
                            unique title to the activity)</small></label>
                    <input required value="<%= activity.title %>" type="text" name="title" id="title"
                        class="form-control">
                </div>

                <div class="form-group mb-4 w-25">
                    <label for="category" style="color: black; font-weight: bold; font-size: 20px;"> Category: </label>
                    <select name="category" id="category" class="form-control">
                        <% categories.forEach(category => { %>
                        <option value="<%= category %>"><%= category %>
                        </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group mb-4">
                    <label for="targetAudience" style="color: black; font-weight: bold; font-size: 20px;"> Target
                        audience:
                    </label><br />
                    <select required name="targetAudience" id="targetAudience" size="3" multiple
                        class="form-control w-25">
                        <% targetAudience.forEach(audience => { %>
                        <option value="<%= audience %>"><%= audience %>
                        </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group mb-4 w-25">
                    <label for="designedFor" style="color: black; font-weight: bold; font-size: 20px;"> Designed for:
                    </label>
                    <select name="designedFor" id="designedFor" class="form-control">
                        <% designedFor.forEach(participants => { %>
                        <option value="<%= participants %>"><%= participants %>
                        </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group mb-4 w-50">
                    <label for="cost" style="color: black; font-weight: bold; font-size: 20px"> Cost: </label>
                    <input required value="<%= activity.cost %>" type="text" name="cost" id="cost" class="form-control">
                </div>


                <div class="form-group mb-4">
                    <label for="description" style="color: black; font-weight: bold; font-size: 20px;"> Description:
                    </label>
                    <textarea required name="description" id="description" class="form-control" rows="4"
                        cols="50"><%= activity.description %></textarea>
                </div>

                <div class="form-group mb-5">
                    <label for="markdown" style="color: black; font-weight: bold; font-size: 20px;"> Markdown: </label>
                    <textarea required name="markdown" id="markdown" class="form-control" rows="10"
                        cols="50"><%= activity.markdown %></textarea>
                </div>

                <div class="form-group mb-4">
                    <label for="code" style="color: black; font-size: 20px"> <b>Code: </b><small>(will allow you
                            to delete the activity)</small> </label>
                    <input required value="<%= activity.code %>" type="text" name="code"
                        id="code" class="form-control w-50"></input>
                </div>

                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</body>

</html>